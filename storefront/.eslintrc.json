{
  "env": {
    "node": true,
    "commonjs": true,
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-undef": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    // "eqeqeq": "error",
    // "curly": "error",
    "semi": ["error", "always"],
    // "quotes": ["error", "double"],
    "indent": ["error", 2, {
      "SwitchCase": 1
    }],
    "no-var": "error",
    "prefer-const": "warn"
  },
  "globals": {
    "require": true,
    "process": true
  }
}